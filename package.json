{
  "name": "cake-crud",
  "version": "1.0.0",
  "description": "A simple CRUD API",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node build/index.js",
    "dev": "nodemon src/index.ts",
    "clean": "rimraf build && mkdir build",
    "build": "npm run clean && tsc",
    "prettify": "prettier --write ./src",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:rollback": "npx sequelize-cli db:migrate:undo:all",
    "migrate:refresh": "npx sequelize-cli db:migrate:undo:all && npm run migrate ",
    "test": "export NODE_ENV=test && npx jest --detectOpenHandles --testTimeout=10000 --forceExit",
    "pretest": "export NODE_ENV=test && npm run migrate:refresh",
    "coveralls": "npm run pretest && jest --coverage --detectOpenHandles --testTimeout=10000 && cat ./coverage/lcov.info | coveralls"
  },
  "author": "Chinedu Orie <nedsoftdeveloper@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "auto-bind": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.39",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.11",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
